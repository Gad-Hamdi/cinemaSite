<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CineMax</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome@6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-film me-2"></i>CineMax
                </a>

                <div class="d-flex">
                    <div class="search-container">
                        <form method="get" asp-action="Index" class="d-flex">
                            <input type="text" name="name" class="search-input" placeholder="Search movies..."
                                   value="@Context.Request.Query["name"]" />
                            <button type="submit" class="btn btn-link text-white">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>

                    <div class="d-flex align-items-center">
                        <a href="#" class="text-white me-3"><i class="fas fa-user fa-lg"></i></a>
                        <a href="#" class="text-white"><i class="fas fa-shopping-cart fa-lg"></i></a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="container text-center">
            <p>&copy; 2024 CineMax - Your Ultimate Movie Experience</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>