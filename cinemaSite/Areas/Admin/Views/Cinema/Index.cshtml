@model List<cinemaSite.Models.Cinema>

@section Scripts {
    <partial name="_NotificationPartial" />
}

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">All Cinemas</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a asp-action="Create" class="btn btn-success">Create New Cinema</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Address</th>
                        <th>Logo</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cinema in Model)
                    {
                        <tr>
                            <td>@cinema.Id</td>
                            <td>@cinema.Name</td>
                            <td>@(string.IsNullOrEmpty(cinema.Description) ? "-" : (cinema.Description.Length > 50 ? cinema.Description.Substring(0, 50) + "..." : cinema.Description))</td>
                            <td>@cinema.Address</td>
                            <td>
                                @if (!string.IsNullOrEmpty(cinema.CinemaLogo))
                                {
                                    <img src="@cinema.CinemaLogo" alt="@cinema.Name" width="60" height="60" class="rounded-circle" />
                                }
                                else
                                {
                                    <span class="text-muted">No logo</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@cinema.Id" class="btn btn-warning btn-sm">Edit</a>
                                <form asp-action="DeleteConfirmed" asp-route-id="@cinema.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this cinema?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
