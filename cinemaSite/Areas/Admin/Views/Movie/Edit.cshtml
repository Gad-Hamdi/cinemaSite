@model CinemaTask.Models.Movie
@using Microsoft.AspNetCore.Mvc.Rendering
@inject CinemaTask.DataAccess.ApplicationDbContext dbContext

<div class="container">
    <h2 class="my-3">Edit Movie</h2>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" style="height:100px"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImgUrl" class="form-label"></label>
            <input asp-for="ImgUrl" class="form-control" />
            <span class="text-danger" asp-validation-for="ImgUrl"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TrailerUrl" class="form-label"></label>
            <input asp-for="TrailerUrl" class="form-control" />
            <span class="text-danger" asp-validation-for="TrailerUrl"></span>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span class="text-danger" asp-validation-for="StartDate"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span class="text-danger" asp-validation-for="EndDate"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="MovieStatus" class="form-label"></label>
            <select asp-for="MovieStatus" class="form-select">
                <option value="0" selected="@Model.MovieStatus == 0">Coming Soon</option>
                <option value="1" selected="@Model.MovieStatus == 1">Now Showing</option>
                <option value="2" selected="@Model.MovieStatus == 2">Ended</option>
            </select>
            <span class="text-danger" asp-validation-for="MovieStatus"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CinemaId" class="form-label"></label>
            <select asp-for="CinemaId" class="form-select" asp-items="@(new SelectList(dbContext.Cinemas.ToList(), "Id", "Name", Model.CinemaId))">
                <option value="">Select Cinema</option>
            </select>
            <span class="text-danger" asp-validation-for="CinemaId"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label"></label>
            <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(dbContext.Categories.ToList(), "Id", "Name", Model.CategoryId))">
                <option value="">Select Category</option>
            </select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
