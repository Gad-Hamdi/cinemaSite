@model List<cinemaSite.Models.Category>

@{
    ViewData["Title"] = "Categories List";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_NotificationPartial" />

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".btn-delete").forEach(function (btn) {
                btn.addEventListener("click", function (e) {
                    e.preventDefault();
                    const form = this.closest("form");

                    Swal.fire({
                        title: 'Are you sure?',
                        text: "This action cannot be undone!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Yes, delete it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit(); // Submit POST form
                        }
                    });
                });
            });
        });
    </script>
}

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">All Categories</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a asp-action="Create" asp-controller="Category" class="btn btn-success">
                Create New Category
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:10%">#</th>
                        <th style="width:60%">Name</th>
                        <th style="width:30%" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-warning btn-sm me-1">Edit</a>

                                    <form asp-action="Delete" asp-controller="Category"
                                          method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="button"
                                                class="btn btn-danger btn-sm btn-delete">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">
                                No categories available.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
