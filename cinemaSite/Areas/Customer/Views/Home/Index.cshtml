@model List<cinemaSite.Models.Movie>
@{
    ViewData["Title"] = "Movies - CineMax";
    Layout = "_Layout";
}

@section Styles {
    <style>
        /* ... existing styles ... */

        .movie-poster {
            width: 100%;
            height: 300px;
            object-fit: cover;
            transition: var(--transition);
        }

        .movie-card:hover .movie-poster {
            transform: scale(1.05);
        }
    </style>
}

<!-- ... existing content ... -->
@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @foreach (var movie in Model)
        {
            <div class="col">
                <div class="movie-card">
                    @* <img src="@(string.IsNullOrEmpty(movie.ImgUrl) ? "https://via.placeholder.com/300x400/333/fff?text=" + Uri.EscapeDataString(movie.Name) : movie.ImgUrl)"
                         class="movie-poster" alt="@movie.Name"> *@
                    <img src="~/images/movies/@(movie.ImgUrl)"
                         onerror="this.onerror=null;this.src='https://via.placeholder.com/300x400/333/fff?text=@Uri.EscapeDataString(movie.Name)'"
                         class="movie-poster" alt="@movie.Name">
                    <div class="movie-info">
                        <h5 class="movie-title">@movie.Name</h5>
                        <p class="movie-details">
                            <i class="fas fa-film"></i>@movie.Category?.Name
                        </p>
                        <p class="movie-details">
                            <i class="fas fa-building"></i>@movie.Cinema?.Name
                        </p>
                        <p class="movie-details">
                            <i class="fas fa-star"></i>@movie.Price.ToString("C")
                        </p>
                        <p class="movie-description">
                            @(movie.Description?.Length > 100 ? movie.Description.Substring(0, 100) + "..." : movie.Description)
                        </p>
                        <a asp-action="MovieDetails" asp-route-id="@movie.Id" class="btn-details">
                            View Details <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- ... rest of existing content ... -->
}

@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Movie pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            <!-- Previous button -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                   asp-route-name="@Context.Request.Query["name"]">
                    &laquo; Previous
                </a>
            </li>

            <!-- Page numbers -->
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-name="@Context.Request.Query["name"]">
                        @i
                    </a>
                </li>
            }

            <!-- Next button -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                   asp-route-name="@Context.Request.Query["name"]">
                    Next &raquo;
                </a>
            </li>
        </ul>
    </nav>
}