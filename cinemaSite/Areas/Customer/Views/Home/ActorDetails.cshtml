@model cinemaSite.Models.Actor
@{
    ViewData["Title"] = Model.FullName + " - CineMax";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .actor-hero {
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('@(string.IsNullOrEmpty(Model.ProfilePicture) ? "https://via.placeholder.com/1920x300/333/fff?text=" + Uri.EscapeDataString(Model.FullName) : Model.ProfilePicture)') center/cover;
            padding: 60px 0;
            margin-bottom: 3rem;
            border-radius: 15px;
        }

        .actor-profile {
            text-align: center;
            margin-bottom: 3rem;
        }

        .actor-image {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 1.5rem;
            border: 4px solid var(--primary-color);
            box-shadow: 0 5px 20px rgba(229, 9, 20, 0.3);
        }

        .movies-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .movie-card-small {
            background: var(--light-bg);
            border-radius: 10px;
            overflow: hidden;
            transition: var(--transition);
            height: 100%;
        }

            .movie-card-small:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 20px rgba(229, 9, 20, 0.2);
            }

        .movie-poster-small {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .movie-info-small {
            padding: 1rem;
        }

        .actor-bio {
            background: var(--light-bg);
            padding: 2rem;
            border-radius: 10px;
            margin-bottom: 2rem;
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 1rem;
        }

        .social-link {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--primary-color);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            transition: var(--transition);
        }

            .social-link:hover {
                transform: translateY(-3px);
                background: #ff0a16;
            }
    </style>
}

<div class="actor-hero">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">@Model.FullName</h1>
    </div>
</div>

<div class="container">
    <div class="actor-profile">
        <img src="@(string.IsNullOrEmpty(Model.ProfilePicture) ? "https://via.placeholder.com/200x200/333/fff?text=" + Uri.EscapeDataString(Model.FullName) : Model.ProfilePicture)"
             class="actor-image" alt="@Model.FullName">
        <h2>@Model.FullName</h2>
        <p class="lead text-muted">@Model.Bio</p>

        <div class="social-links">
            <a href="#" class="social-link">
                <i class="fab fa-imdb"></i>
            </a>
            <a href="#" class="social-link">
                <i class="fab fa-instagram"></i>
            </a>
            <a href="#" class="social-link">
                <i class="fab fa-twitter"></i>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="actor-bio">
                <h4><i class="fas fa-info-circle me-2"></i>About</h4>
                <p class="mb-0">@Model.Bio</p>
                @if (!string.IsNullOrEmpty(Model.News))
                {
                    <div class="mt-3">
                        <h5><i class="fas fa-newspaper me-2"></i>Latest News</h5>
                        <p class="mb-0">@Model.News</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Movies Section -->
    <div class="mt-5">
        <h3 class="mb-4"><i class="fas fa-film me-2"></i>Movies</h3>
        @if (ViewBag.movies != null && ((List<cinemaSite.Models.Movie>)ViewBag.movies).Any())
        {
            <div class="movies-grid">
                @foreach (var movie in (List<cinemaSite.Models.Movie>)ViewBag.movies)
                {
                    <div class="movie-card-small">
                        <img src="~/images/cast/@Model.ProfilePicture"
                             onerror="this.onerror=null;this.src='https://via.placeholder.com/200x200/333/fff?text=@Uri.EscapeDataString(Model.FirstName + " " + Model.LastName)'"
                             class="actor-image" alt="@Model.FirstName @Model.LastName">

                        @* <img src="~/images/movies/@(movie.Id).png"
                             onerror="this.onerror=null;this.src='https://via.placeholder.com/250x150/333/fff?text=@Uri.EscapeDataString(movie.Name)'"
                             class="movie-poster-small" alt="@movie.Name"> *@
                        <!-- rest of movie card -->
                    </div>
                }
                @* @foreach (var movie in (List<cinemaSite.Models.Movie>)ViewBag.movies)
                {
                    <div class="movie-card-small">
                        <img src="@(string.IsNullOrEmpty(movie.ImgUrl) ? "https://via.placeholder.com/250x150/333/fff?text=" + Uri.EscapeDataString(movie.Name) : movie.ImgUrl)"
                             class="movie-poster-small" alt="@movie.Name">
                        <div class="movie-info-small">
                            <h6>@movie.Name</h6>
                            <p class="text-muted small mb-2">
                                <i class="fas fa-film"></i> @movie.Category?.Name
                            </p>
                            <p class="text-muted small mb-2">
                                <i class="fas fa-calendar"></i> @movie.StartDate.Year
                            </p>
                            <a asp-action="MovieDetails" asp-route-id="@movie.Id" class="btn-details btn-sm mt-2">
                                <i class="fas fa-eye me-1"></i>View Movie
                            </a>
                        </div>
                    </div>
                } *@
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-film fa-2x text-muted mb-3"></i>
                <p class="text-muted">No movies found for this actor</p>
            </div>
        }
    </div>

    <div class="text-center mt-5">
        <a asp-action="Index" class="btn-details">
            <i class="fas fa-arrow-left me-2"></i>Back to Movies
        </a>
    </div>
</div>